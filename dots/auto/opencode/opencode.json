{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": false,
  "theme": "tokyonight",
  "formatter": {
    "nix": {
      "command": [
        "nxfmt",
        "$FILE"
      ],
      "extensions": [
        ".nix"
      ]
    }
  },
  "provider": {
    "lmstudio": {
      "models": {
        "qwen/qwen3-30b-a3b-2507": {
          "name": "Qwen 3 30B A3B 2507"
        }
      },
      "options": {
        "baseURL": "http://localhost:1234/v1"
      }
    },
    "openrouter": {
      "models": {
        "google/gemini-2.5-flash-lite": {
          "name": "Gemini 2.5 Flash Lite"
        }
      }
    }
  },
  "mcp": {
    "searxng": {
      "enabled": true,
      "type": "local",
      "command": [
        "/nix/store/dccx7km0mm6shf1zizx760drifjbg1yr-bun-1.3.0/bin/bunx",
        "-y",
        "mcp-searxng@latest"
      ],
      "environment": {
        "SEARXNG_URL": "https://searxng.coeus.missingham.net"
      }
    },
    "memory": {
      "enabled": true,
      "type": "local",
      "command": [
        "/nix/store/dccx7km0mm6shf1zizx760drifjbg1yr-bun-1.3.0/bin/bunx",
        "-y",
        "@modelcontextprotocol/server-memory"
      ]
    },
    "sequential-thinking": {
      "enabled": true,
      "type": "local",
      "command": [
        "/nix/store/dccx7km0mm6shf1zizx760drifjbg1yr-bun-1.3.0/bin/bunx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "context7": {
      "enabled": true,
      "type": "local",
      "command": [
        "/nix/store/dccx7km0mm6shf1zizx760drifjbg1yr-bun-1.3.0/bin/bunx",
        "-y",
        "@upstash/context7-mcp"
      ],
      "environment": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      }
    },
    "git": {
      "enabled": true,
      "type": "local",
      "command": [
        "/etc/profiles/per-user/smissingham/bin/uvx",
        "mcp-server-git"
      ]
    },
    "knowledgefx": {
      "enabled": true,
      "type": "local",
      "command": [
        "/etc/profiles/per-user/smissingham/bin/uv",
        "--directory",
        "/home/smissingham/Employer/workspace-product/knowledgefx",
        "run",
        "python",
        "-m",
        "builds.mcpserver"
      ]
    },
    "copilotfx": {
      "enabled": true,
      "type": "local",
      "command": [
        "/nix/store/dccx7km0mm6shf1zizx760drifjbg1yr-bun-1.3.0/bin/bunx",
        "mcp-remote",
        "https://mcp.pricefx.com/mcp/demofx-staging.pricefx.com/copilotfx",
        "3334",
        "--host",
        "localhost",
        "--static-oauth-client-info",
        "{ \"client_id\": \"devenv\", \"redirect_uri\": \"http://localhost:3334/oauth/callback\"}"
      ]
    }
  }
}
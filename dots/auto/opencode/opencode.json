{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": false,
  "theme": "opencode",
  "model": "openrouter/qwen/qwen3-coder",
  "small_model": "openrouter/google/gemini-2.5-flash-lite",
  "provider": {
    "openrouter": {
      "models": {
        "google/gemini-2.5-flash-lite": {
          "name": "Gemini 2.5 Flash Lite"
        }
      }
    }
  },
  "mcp": {
    "memory": {
      "type": "local",
      "enabled": true,
      "command": [
        "/bin/sh",
        "-c",
        "exec $(which npx) -y @modelcontextprotocol/server-memory"
      ]
    },
    "sequential-thinking": {
      "type": "local",
      "enabled": true,
      "command": [
        "/bin/sh",
        "-c",
        "exec $(which npx) -y @modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "time": {
      "type": "local",
      "enabled": true,
      "command": [
        "uvx",
        "mcp-server-time",
        "--local-timezone=America/Chicago"
      ]
    },
    "prompt-lib": {
      "type": "local",
      "enabled": true,
      "command": [
        "npx",
        "-y",
        "prompt-library-mcp@latest"
      ],
      "environment": {
        "LIBRARY_PATH": "/Users/smissingham/Documents/Obsidian/second-brain/@Public/GenAI/Prompts/",
        "DEFAULT_PROMPTS": "true",
        "SERVER_NAME": "Personal Prompt Library"
      }
    },
    "git": {
      "type": "local",
      "enabled": true,
      "command": [
        "uvx",
        "mcp-server-git"
      ]
    },
    "ripgrep": {
      "type": "local",
      "enabled": true,
      "command": [
        "/bin/sh",
        "-c",
        "exec $(which npx) -y mcp-ripgrep@latest"
      ]
    },
    "userDocuments": {
      "type": "local",
      "enabled": true,
      "command": [
        "/bin/sh",
        "-c",
        "exec $(which npx) -y @modelcontextprotocol/server-filesystem ~/Documents/"
      ]
    },
    "searxng": {
      "type": "local",
      "enabled": true,
      "command": [
        "/bin/sh",
        "-c",
        "exec $(which npx) -y mcp-searxng@latest"
      ],
      "environment": {
        "SEARXNG_URL": "HTTPS://SEARXNG.COEUS.MISSINGHAM.NET"
      }
    }
  }
}